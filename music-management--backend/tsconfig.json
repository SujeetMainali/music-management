{
    "compilerOptions": {
      "target": "es2022",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "CommonJS",
      "outDir": "./build/",
      "rootDir": "./src",
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
  
    "include": ["src/**/*.ts"],
    "exclude": ["movies", "**/*.legacy.ts", "node_modules/**/*.ts"]
  }